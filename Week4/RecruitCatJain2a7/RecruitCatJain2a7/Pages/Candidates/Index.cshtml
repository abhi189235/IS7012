@page
@model RecruitCatJain2a7.Pages.Candidates.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Candidates</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].TargetSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].DomainSpecialization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].CompanyAssociated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].JobTitleAssociated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].IndustryAssociated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Candidate) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DomainSpecialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyAssociated.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitleAssociated.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndustryAssociated.IndustryName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CandidateId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CandidateId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CandidateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
