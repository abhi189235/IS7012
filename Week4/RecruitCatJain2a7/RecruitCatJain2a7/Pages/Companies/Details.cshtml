@page
@model RecruitCatJain2a7.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Company: @Html.DisplayFor(model => model.Company.Name)</h1>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.PositionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.PositionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MinimumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MinimumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaximumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaximumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MarketShare)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MarketShare)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.ProvidesSponsorship)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.ProvidesSponsorship)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.IndustryAssociated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.IndustryAssociated.IndustryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.ContactNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.ContactNumber)
        </dd>
    </dl>
</div>
@if (Model.Company.Candidates.Any())
{
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].TargetSalary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].DomainSpecialization)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].CompanyAssociated)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].IndustryAssociated)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Company.Candidates)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TargetSalary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DomainSpecialization)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyAssociated.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IndustryAssociated.IndustryName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
}
else
{
    <div class="alert-warning">There is no Candidate available in this Company</div>
}
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.CompanyId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
